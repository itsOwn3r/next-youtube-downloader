generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Download {
  id Int @id @default(autoincrement())
  title String
  type DownloadType
  uploader String
  thumbnail String
  fileName String
  size String
  link String
  videoId String
  isDownloaded Boolean @default(false)
  date Int

  PlaylistItem PlaylistItem[]
}

model Proxy {
  id Int @id
  ip String
  port Int
  protocol Protocol
  isActive Boolean @default(true)
}


model Playlist {
  id String @id
  title String
  url String
  description String?
  imageUrl String
  numberOfItems Int?
  autoUpdate Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PlaylistItem PlaylistItem[]
}

model PlaylistItem {
  id Int @id @default(autoincrement())
  videoId String
  title String
  videoLength String
  uploader String
  playlistId String
  downloadId Int?
  createdAt DateTime @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id])
  download Download? @relation(fields: [downloadId], references: [id])
}

enum DownloadType {
  audio
  video
  playlist
}


enum Protocol {
  HTTP
  HTTPS
}